{
  "name": "rde-creator",
  "displayName": "Robotics Package Creation Tool",
  "description": "Create ROS 2 Packages using AI",
  "publisher": "Ranch-Hand-Robotics",
  "icon": "media/icon.png",
  "license": "https://github.com/Ranch-Hand-Robotics/rde-creator/blob/main/LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ranch-Hand-Robotics/rde-creator"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "robotics-templates.create",
        "title": "Create ROS 2 Package",
        "category": "ROS"
      }
    ],
    "configuration": {
      "title": "Creator for ROS 2",
      "properties": {
        "rosPackageCreator.lastSelectedModel": {
          "type": "string",
          "default": "auto",
          "description": "Last selected AI model for package generation. Set to 'auto' to use preferred model family."
        }
      }
    },
    "menus": {
      "ros": [
        {
          "command": "robotics-templates.create",
          "group": "1_packages@1"
        }
      ],
      "explorer/context": [
        {
          "command": "robotics-templates.create",
          "when": "explorerResourceIsFolder",
          "group": "ros@1"
        }
      ],
      "commandPalette": [
        {
          "command": "robotics-templates.create"
        }
      ]
    }
  },
  "scripts": {
    "package:dev": "vsce package -o rde-creator-dev.vsix",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "build": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.124",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.101.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.56.0",
    "mock-fs": "^5.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "memfs": "^4.9.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yaml": "^2.4.2"
  }
}
